{
  "name": "@open-election-compass/client",
  "version": "1.0.0-beta.7",
  "author": "Till Sanders <mail@till-sanders.de>",
  "license": "GPL-3.0",
  "main": "dist/lib/open-election-compass.umd.min.js",
  "files": [
    "/dist/lib",
    "/dist/nuxt",
    "/src",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/open-election-compass/client/issues"
  },
  "homepage": "https://open-election-compass.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-election-compass/client.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npm run serve",
    "serve": "vue-cli-service serve",
    "build": "npm run build:prod",
    "build:all": "npm run build:demo && npm run build:lib && npm run build:nuxt",
    "build:staging": "vue-cli-service build --target app --mode staging --inline-vue --name open-election-compass --dest dist/dev",
    "build:prod": "vue-cli-service build --target app --inline-vue --name open-election-compass --dest dist",
    "build:demo": "vue-cli-service build --target app --inline-vue --name open-election-compass --dest dist/demo",
    "build:lib": "npx vue-cli-service build --target lib --inline-vue --name open-election-compass --dest dist/lib ./src/main.js --report && unlink dist/lib/demo.html",
    "build:nuxt": "EXTRACT_CSS=true npx vue-cli-service build --target lib --name open-election-compass --dest dist/nuxt ./src/nuxtPlugin.js --formats commonjs --report",
    "test": "npm run test:unit",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "lint:style": "stylelint **/*.{css,vue}",
    "prerelease": "npm run build:lib",
    "release": "np",
    "analyze": "source-map-explorer 'dist/js/*.js'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/vue-fontawesome": "^0.1.10",
    "@wordpress/dom-ready": "^2.12.0",
    "core-js": "^3.8.3",
    "get-user-locale": "^1.4.0",
    "ie11-custom-properties": "^4.1.0",
    "lodash": "^4.17.20",
    "normalize.css": "^8.0.1",
    "realm-web": "^1.2.0",
    "smoothscroll-polyfill": "^0.4.4",
    "v-scroll-lock": "^1.3.1",
    "vue": "^2.6.12",
    "vue-i18n": "^8.22.4",
    "vue-router": "^3.4.9",
    "vue-tippy": "^4.7.2",
    "vuex": "^3.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@intlify/vue-i18n-loader": "^1.0.0",
    "@vue/cli-plugin-babel": "^4.5.10",
    "@vue/cli-plugin-e2e-cypress": "^4.5.10",
    "@vue/cli-plugin-eslint": "^4.5.10",
    "@vue/cli-plugin-router": "^4.5.10",
    "@vue/cli-plugin-unit-jest": "^4.5.10",
    "@vue/cli-service": "^4.5.10",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/test-utils": "1.0.3",
    "babel-eslint": "^10.1.0",
    "chromedriver": "^83.0.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-vue": "^6.2.2",
    "geckodriver": "^1.21.1",
    "husky": "^3.1.0",
    "node-sass": "^4.14.1",
    "np": "^7.2.0",
    "sass-loader": "^8.0.2",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^13.9.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-order": "^4.1.0",
    "vue-cli-plugin-i18n": "^1.0.1",
    "vue-template-compiler": "^2.6.12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}